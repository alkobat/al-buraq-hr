{
    "name": "alburaq/hr-evaluation-system",
    "description": "Al-Buraq Airlines HR Performance Evaluation System",
    "type": "project",
    "require": {
        "php": ">=7.4",
        "phpoffice/phpspreadsheet": "^1.28",
        "mpdf/mpdf": "^8.1",
        "phpoffice/phpword": "^1.1",
        "phpmailer/phpmailer": "^6.9"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
    "config": {
        "vendor-dir": "vendor"
    }
}
